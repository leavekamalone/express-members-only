    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='container-fluid' class="p-3 mb-2 bg-light text-dark ")
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/' ) Members Only
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation' )
          span.navbar-toggler-icon
  
        .collapse.navbar-collapse(id='navbarSupportedContent' )
          ul.navbar-nav.mr-auto
            if currentUser && currentUser.member_status == true
              li.nav-item.active
                a.nav-link(href='/catalog/post') Post Message
            if !currentUser 
              li.nav-item
                a.nav-link(href='/catalog/sign_up') Sign Up
            if !currentUser
              li.nav-item
                a.nav-link(href='/catalog/login') Log In
            if currentUser
              ul.navbar-nav.mr-auto
                li.nav-item.active
                  li.nav-item
                    a.nav-link(href='/catalog/logout') Log Out
            if currentUser && currentUser.member_status == false
              ul.navbar-nav.mr-auto
                li.nav-item.active
                  li.nav-item
                    a.nav-link(href='/catalog/secret') Become Secret Member

      div(class='col-sm-10')
        block content
          